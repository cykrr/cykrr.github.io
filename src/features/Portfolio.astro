---
import NavBar from "@/components/NavBar.astro";
import biolabEscapeThumbnail from "@/assets/logo-biolab-escape.png"
import planetariumVrThumbnail from "@/assets/badges/sun.png";
import floreriaCoralThumbnail from "@/assets/logo-floreria-coral.png"
---

<div class="w-full max-w-[1280px] mx-auto px-4 font-sans text-[#333]">
    
    <main class="py-8 grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">

        <section class="flex flex-col h-full">
            <h2 class="text-3xl font-bold mt-10 mb-6 text-[#3f51b5]">
                Diseño Web y Branding
            </h2>

            <div class="grid grid-cols-[repeat(auto-fill,minmax(250px,1fr))] gap-6">
                
                <div class="group flex flex-col items-center bg-white rounded-xl p-4 shadow-[0_4px_12px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_8px_20px_rgba(0,0,0,0.15)]">
                    <a href="/portfolio/floreria-coral" class="flex justify-center items-center w-full h-[180px] mb-3 rounded-lg overflow-hidden">
                        <img 
                            class="h-40 object-contain transition-transform duration-300 group-hover:scale-105" 
                            src={floreriaCoralThumbnail.src} 
                            alt="Florería Coral" 
                        />
                    </a>
                    <label class="text-lg font-semibold pt-1 cursor-pointer">Florería Coral</label>
                </div>

            </div>
        </section>

        <section class="flex flex-col h-full">
            <h2 class="text-3xl font-bold mt-10 mb-6 text-[#3f51b5]">
                Videojuegos Educativos
            </h2>

            <div class="grid grid-cols-[repeat(auto-fill,minmax(250px,1fr))] gap-6">
                
                <div class="group flex flex-col items-center bg-white rounded-xl p-4 shadow-[0_4px_12px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_8px_20px_rgba(0,0,0,0.15)]">
                    <a href="/portfolio/biolab-escape" class="flex justify-center items-center w-full h-[180px] mb-3 rounded-lg overflow-hidden">
                        <img 
                            class="h-16 object-contain transition-transform duration-300 group-hover:scale-105" 
                            src={biolabEscapeThumbnail.src} 
                            alt="Biolab Escape" 
                        />
                    </a>
                    <label class="text-lg font-semibold pt-1 cursor-pointer">Biolab Escape</label>
                </div>

                <div class="group flex flex-col items-center bg-white rounded-xl p-4 shadow-[0_4px_12px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_8px_20px_rgba(0,0,0,0.15)]">
                    <a href="/portfolio/planetarium-vr" class="flex justify-center items-center w-full h-[180px] mb-3 rounded-lg overflow-hidden">
                        <img 
                            class="w-[60%] h-auto object-contain transition-transform duration-300 group-hover:scale-105" 
                            src={planetariumVrThumbnail.src} 
                            alt="PlanetariumVR" 
                        />
                    </a>
                    <label class="text-lg font-semibold pt-1 cursor-pointer">PlanetariumVR</label>
                </div>

            </div>
        </section>

    </main>
</div>
